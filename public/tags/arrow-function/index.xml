&lt;/span&gt;&lt;/span&gt;&lt;span style="display:flex;"&gt;&lt;span&gt;&lt;span style="color:#a6e22e"&gt;showStudent&lt;/span&gt;(&lt;span style="color:#e6db74"&gt;&amp;#34;Minh&amp;#34;&lt;/span&gt;, &lt;span style="color:#ae81ff"&gt;8.5&lt;/span&gt;);
